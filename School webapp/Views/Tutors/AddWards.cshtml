@model School_webapp.Models.TutorStudent

@{
    ViewData["Title"] = "addWards";
}

<h1>addWards</h1>

<h4>Student</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="addWards">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="studentId" class="control-label">Full Name</label>
                <br />
                <div class="d-flex align-items-center">
                    <select id="optlist" name="studentId" class="studentId me-1" style="width: 40%;">
                        <option selected hidden value="0" class="justify-content-center">--Select one Option--</option>
                        @foreach (var item in ViewBag.studentList)
                        {
                            <option value="@item[0]">@item[2], @item[1]</option>
                        }
                    </select>
                </div>
            </div>
            <input name="tutorId" value="@ViewBag.id" hidden/>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary mt-3" asp-action="addWards"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
