@model IEnumerable<School_webapp.Models.Student>

@{
    ViewData["Title"] = "View";
}

<h1>View</h1>

<p>
    <a asp-action="AddStudents" asp-route-id="@ViewBag.classId">Add to class</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Address
            </th>
            <th>
                Age
            </th>
            <th>
                School year
            </th>
            <th>
                Section
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.lastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.schoolYear)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.section)
                </td>
                <td>
                    <div class="input-group">
                        <a class="btn btn-outline-primary me-2" asp-action="Details" asp-route-id="@item.id" asp-controller="Students">Details</a>

                        <form method="post">
                            <input name="classId" value="@ViewBag.classId" hidden>
                            <button type="submit" class="btn-outline-danger btn" asp-controller="Classes" asp-action="DeleteStudent" asp-route-id="@item.id " onclick="return showAlert()">Delete</button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    function showAlert() {
        var respuesta = confirm("Are you sure? You will delete it permanently");
        if (!respuesta) {
            event.preventDefault();
        }
    }
</script>
