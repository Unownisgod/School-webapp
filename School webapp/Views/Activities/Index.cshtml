@model IEnumerable<School_webapp.Models.Activity>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.tittle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.deadline)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.calification)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isSubmitted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isRated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.canBeSubmittedLate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isLate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.classId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.tittle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.deadline)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.calification)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isSubmitted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isRated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.canBeSubmittedLate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isLate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.classId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
