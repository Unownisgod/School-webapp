@page
@using IdentitySchoolWebap.Areas.Identity.Pages.Account;
@model LoginModel
@{
    Layout = null;
}


@{
    ViewData["Title"] = "Log in";
}
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - test</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true">
    <link rel="stylesheet" href="~/test.styles.css" asp-append-version="true">
    <style>
body {
    width: 100%;
    height: 100vh;
    overflow: hidden;
    backdrop-filter: blur(10px);
}

@{
    var random = new Random();
    var randomNumber = random.Next(1, 5);
    string image;
    switch (randomNumber) {
        case 1:
            image = "/resources/images/loginBg1.jpg";
            break;
        case 2:
            image = "/resources/images/loginBg2.jpg";
            break;
        case 3:
            image = "/resources/images/loginBg3.jpg";
            break;
        case 4:
            image = "/resources/images/loginBg4.jpg";
            break;
        default:
            image = string.Empty;
            break;
    }
}

body {
    background-image: url(@image);
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center;
    background-attachment: fixed;
}
    </style>
</head>
<div class="d-flex justify-content-center align-content-center" style="align-content: center;
position: absolute;
top: 30%;
left: 40%;
margin: -25px 0 0 -25px;">
    <div class="row ">
        <h1>@ViewData["Title"]</h1>
        <hr />
        <div class="col-md-4 align-content-center" style="align-content: center">
            <section>
                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Username" class="form-control" style="width: 350%;" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Username" class="form-label">Username</label>
                        <span asp-validation-for="Input.Username" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" style="width: 350%;" autocomplete="current-password" aria-required="true" />
                        <label asp-for="Input.Password" class="form-label">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div>
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe" class="form-label" style="width: 350%;">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary" style="width: 350%;">Log in</button>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
