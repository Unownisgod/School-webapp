@model School_webapp.Models.Subject

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Subject</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label">Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="schoolYear" class="control-label">School year</label>
                <input asp-for="schoolYear" class="form-control" />
                <span asp-validation-for="schoolYear" class="text-danger"></span>
            </div>
            <div class="input-group">
                <input type="submit" value="Edit" class="btn btn-primary me-3" />
                <button type="reset" class="btn btn-primary" onclick="history.go(-1);">Go back</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
